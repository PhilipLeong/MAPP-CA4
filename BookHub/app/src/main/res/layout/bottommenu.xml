<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom"
    android:gravity="bottom"
    android:id="@+id/menubar"
    android:orientation="vertical">

    <Button
        android:id="@+id/profile_Btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/profile_icon"
        android:text="Profile"
        android:textColor="#a6a6b0"
        android:textSize="10sp"
        android:translationX="274dp"
        android:translationY="124dp" />

    <Button
        android:id="@+id/store_Btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/store_icon"
        android:text="Store"
        android:textColor="#a6a6b0"
        android:textSize="10sp"
        android:translationX="50dp"
        android:translationY="60dp" />

    <ImageButton
        android:id="@+id/post_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:translationX="1dp"
        android:translationY="-6dp"
        android:background="#00000000"
        app:srcCompat="@drawable/post_icon" />

</LinearLayout>